@model User


<div class="d-flex gap-8">

<form asp-action="Register" asp-controller="Home" class="w-30">
    <h1>Registration :</h1>
<div class="row mb-3">
    <label  class="col-sm-2 col-form-label">First name :</label>
    <div class="col-sm-10">
    <input asp-for="FName" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="FName"></span>
    </div>
</div>
<div class="row mb-3">
    <label  class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
    <input asp-for="LName" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="LName"></span>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
    <input asp-for="Email" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="Email"></span>
    </div>
</div>
<div class="row mb-3">
    <label  class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
    <input asp-for="Password" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="Password"></span>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label">PW Confirm</label>
    <div class="col-sm-10">
    <input asp-for="ConfirmPassword" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="ConfirmPassword"></span>
</div>
</div>

<input class="btn btn-primary" type="submit" value="Register">
</form>
<partial name="_login" />
</div>