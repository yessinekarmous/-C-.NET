@model Wedding
<div class="d-flex justify-content-between w-100 p-3">
    <h4>Welcome @Context.Session.GetString("name")</h4>
    <div>
        <a href="/weddings">Home</a> &nbsp;|&nbsp;Plan a Wedding &nbsp;|&nbsp;<a href="/logout">Logout</a>
    </div>
</div>
<hr class="hr">
<h1>Plan A wedding</h1>
<br>
<form method="post" asp-action="AddWedding">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Wedder one</label>
        <div class="col-sm-10">
            <input asp-for="WedderOne" class="form-control w-25" >
            <span class="text-danger" asp-validation-for="WedderOne"></span>
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Wedder two</label>
        <div class="col-sm-10">
            <input asp-for="WedderTwo" class="form-control w-25" >
            <span class="text-danger" asp-validation-for="WedderTwo"></span>
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control w-25" >
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control w-25" >
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
    </div>
    <br>
    <input asp-for="UserId" type="hidden" value="@Context.Session.GetInt32("userId")">
    <input type="submit" class="btn btn-primary">

</form>