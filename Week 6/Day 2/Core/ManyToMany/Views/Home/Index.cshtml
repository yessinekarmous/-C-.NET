@model Product
<div class="d-flex justify-content-center gap-4">
    <h3>Product</h3>
<div class="vertical-line"></div>
<h3><a href="/categories">Category</a></h3>
</div>

<div class="d-flex justify-content-center g-4">
    <form method="post" asp-action="AddProduct" class="w-60">
        <br>
        <h3 class="text-center">New Product</h3>
        <br>
        <div class="mb-3 row w-100">
            <label class="col-sm-2 col-form-label fw-bold w-25">Name</label>
            <div class="col-sm-10 w-50">
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="mb-3 row w-100">
            <label class="col-sm-2 col-form-label fw-bold w-25">Description</label>
            <div class="col-sm-10 w-50">
                <input asp-for="Description" class="form-control ">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="mb-3 row w-100">
            <label class="col-sm-2 col-form-label fw-bold w-25">Price</label>
            <div class="col-sm-10 w-50">
                <input asp-for="Price" class="form-control">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Create">
    </form>
    
    <div class="vertical-line-2"></div>

    <div class="w-50">
        
        <br>    
        <h3 class="text-center">All Products</h3>
        <br>
        @foreach(Product p in ViewBag.AllProducts){
            <ul>
                <li><a href="/products/@p.ProductId">@p.Name</a></li>
            </ul>
        }
    </div> 

</div>
