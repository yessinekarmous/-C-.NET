@model Category
<div class="d-flex justify-content-center gap-4">
    <h3><a href="/">Product</a></h3>
<div class="vertical-line"></div>
<h3>Category</h3>
</div>

<div class="d-flex justify-content-center g-4">
    <form method="post" asp-action="AddCategory" class="w-60">
        <br>
        <h3 class="text-center">New Category</h3>
        <br>
        <div class="mb-3 row w-100">
            <label class="col-sm-2 col-form-label fw-bold w-25">Name</label>
            <div class="col-sm-10 w-50">
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Create">
    </form>
    
    <div class="vertical-line-2"></div>

    <div class="w-50">
        
        <br>    
        <h3 class="text-center">All Categories</h3>
        <br>
        @foreach(Category c in ViewBag.AllCategories){
            <ul>
                <li><a href="/categories/@c.CategoryId">@c.Name</a></li>
            </ul>
        }
    </div> 

</div>
