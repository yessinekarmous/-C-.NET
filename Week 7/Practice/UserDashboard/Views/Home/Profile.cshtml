@model User
<form asp-action="updateProfile" class="w-30">
    <h3>Registration :</h3>
    <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Email Address:</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="col-sm-2 w-100">First name:</label>
        <div class="col-sm-10">
            <input asp-for="FName" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="FName"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Last Name:</label>
        <div class="col-sm-10">
            <input asp-for="LName" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="LName"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Password:</label>
        <div class="col-sm-10">
            <input value="@Model.Password" asp-for="Password" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="Password" ></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Password Confirmation:</label>
        <div class="col-sm-10">
            <input value="@Model.Password" asp-for="ConfirmPassword"  class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    @* <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Level:</label>
        <div class="col-sm-10">
            <input asp-for="UserLevel" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="UserLevel"></span>
        </div>
    </div> *@
    <div class="mb-3">
        <label class="col-sm-2 col-form-label w-100">Description:</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control w-75">
            <span class="text-danger fw-bold" asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="w-30 d-grid gap-2 d-md-flex justify-content-md-end">
        <input class="btn btn-success" value="Register" type="submit">
    </div>
    <br>
</form>