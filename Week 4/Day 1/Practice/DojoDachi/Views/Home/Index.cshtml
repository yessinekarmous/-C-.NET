<div class="d-flex  align-items-center flex-column " >
<div class="d-flex w-75 justify-content-center p-2">
<p class="flex-item flex-grow-1"><strong>Fullness:</strong>&nbsp; @Context.Session.GetInt32("fullness")</p>
<p class="flex-item flex-grow-1"><strong>Happiness:</strong>&nbsp;@Context.Session.GetInt32("happiness")</p>
<p class="flex-item flex-grow-1"><strong>Meals:</strong>&nbsp;@Context.Session.GetInt32("meals")</p>
<p class="flex-item flex-grow-1"><strong>Energy:</strong>&nbsp;@Context.Session.GetInt32("energy")</p>  
    </div>
    @{ if (@Context.Session.GetInt32("fullness")>=100 && @Context.Session.GetInt32("happiness")>=100 && @Context.Session.GetInt32("energy")>=100)
    {   
        <div class="border border-4 p-4 d-flex w-75  align-items-center flex-column">
        <img  src="~/pexels-simona-kidrič-2607544.jpg" alt=""> 
        <br>
        <p class="text-success"><strong>Congragulation ! You won!</strong></p>
        </div>
        <a href="/restart" class="btn btn-success w-5 m-2">Restart</a>
    } 
    else if(@Context.Session.GetInt32("fullness")<=0 || @Context.Session.GetInt32("happiness")<=0)
    {
        <div class="border border-4 p-4 d-flex w-75 align-items-center flex-column">
        <img  src="~/pexels-simona-kidrič-2607544.jpg" alt=""> 
        <br>
        <p class="text-danger"><strong>Your Dojodachi has passed away !</strong></p>
        </div>
        <a href="/restart" class="btn btn-danger w-5 m-2">Restart</a>
    }
    else {

    
    <div class="border border-4 p-4 d-flex w-75  align-items-center flex-column">
    <img  src="~/pexels-simona-kidrič-2607544.jpg" alt=""> 
    <br>
    <p>@Context.Session.GetString("phrase")</p>
    <p>Reaction @Context.Session.GetString("reaction")</p>
    </div>
    <div class="d-flex w-75 justify-content-center gap-4 p-4">
    <a href="/feed" class="btn btn-success flex-item flex-grow-1">Feed</a>
    <a href="/play" class="btn btn-success flex-item flex-grow-1">Play</a>
    <a href="/work" class="btn btn-success flex-item flex-grow-1">Work</a>
    <a href="/sleep" class="btn btn-success flex-item flex-grow-1">Sleep</a>
    </div>
    }}
</div>