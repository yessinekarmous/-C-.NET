@model LogUser
<form asp-action="Login" asp-controller="Home" class="w-30">
        <h1>Login :</h1>
<div class="row mb-3">
   <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
    <input asp-for="LogEmail" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="LogEmail"></span>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
    <input asp-for="LogPassword" class="form-control" >
    <span class="text-danger fw-bold" asp-validation-for="LogPassword"></span>
    </div>
</div>
<button class="btn btn-primary">Login</button>

</form>